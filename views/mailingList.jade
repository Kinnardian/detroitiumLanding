//mailingList
extends layout

block content

    nav#topnavbar.navbar.navbar-default.navbar-fixed-top
        .container-fluid
            .navbar-header
                button(type="button", class="navbar-toggle collapsed", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                #navbarHeader
                    a.navbar-brand( href="/")
                        img#navImg(src='./images/detroitium.png')
                        span#detroitium Detroitium
            .collapse.navbar-collapse.navbar-right
                ul#topNavigationList.nav.navbar-nav
                    li 
                        a(href='facebook.com/detroitium')
                            i.fa.fa-2x.fa-facebook-square
                    li 
                        a(href='#features')
                            i.fa.fa-2x.fa-twitter-square
                    li
                        a(href='http://medium.com/@detroitium') Blog â†’

    #theForm.row
        .mChimp.col-md-8(id="mc_embed_signup").col-md-offset-2.col-sm-10.col-sm-offset-1.col-xs-offset-1.col-xs-10
            form(action="//detroitium.us11.list-manage.com/subscribe/post?u=bfa306c20386bcdc5b98ae5ca&amp;id=6a16acf1a0" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate)
                div#mc_embed_signup_scroll
                    h1 You must be really cool: you're signing up for the Detroitium mailing list
                    div.indicates-required
                        span.asterisk *
                        | indicates required
                    hr

                    div(class="mc-field-group").form-group
                        label(for="mce-EMAIL") Email Address  
                            span.asterisk *
                        input.form-control(type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL")

                    div(class="mc-field-group").form-group
                        label(for="mce-FNAME") First Name
                            span(class="asterisk") *
                        input.form-control(type="text" value="" name="FNAME" class="required" id="mce-FNAME")

                    div(class="mc-field-group").form-group
                        label(for="mce-LNAME") Last Name  
                            span(class="asterisk") *
                        input.form-control(type="text" value="" name="LNAME" class="required" id="mce-LNAME")

                        div(id="mce-responses" class="clear")
                            div(class="response" id="mce-error-response" style="display:none")
                            div(class="response" id="mce-success-response" style="display:none")
                            <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                        div(style="position: absolute; left: -5000px;")
                            input(type="text" name="b_bfa306c20386bcdc5b98ae5ca_6a16acf1a0" tabindex="-1" value="")
                    div
                        input(type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button")
